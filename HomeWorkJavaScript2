var x = +prompt("Введите первое число х");
var y = +prompt("Введите второе число y");

function sumNumb (x, y){
	return (x + y);
};

function diffNumb (x, y){
	return (x - y);
};

function multNumb (x, y){
	return (x * y);
};

function diviNumb (x, y){
	return (x / y);
};

diff  = diffNumb(x, y);
mult  = multNumb(x, y);
sum  = sumNumb (x, y);
divi = diviNumb (x, y);

alert("Введеные числа: х= "+x+ "; y= "+y+  ";\n Сумма х+y= "+sum+ ";\n Разность x-y= " +diff+ ";\n Умножение x*y= " +mult+ ";\n Деление x/y= " +divi+".");

//6.


var arg1=+prompt("Введите число arg1");
var arg2=+prompt("Введите число arg2");
var o=prompt("Введите операцию: вычитание, умножение, сложение или деление")
var c;

function  mathOperation(arg1, arg2, operation) {

switch (o){
   		case "вычитание":
   		c=arg1-arg2;
   		return(c);
   		//return(c, operation);
   		break;

   		case "умножение":
   		c=arg1*arg2;
   		return(c);
   		//return(c, operation);
   		break;

		case "сложение":
   		c=arg1+arg2;
   		return(c);
   		//return(c, operation);
 		break;

 		case "деление":
   		c=arg1+arg2;
   		return(c);
   		//return(c, operation);
 		break;

   		default:
    	alert("Вы задали не верные начальные параметры.");
   		break;

   	}

}
 
